    <sql>-- 检查并添加 origin_id origin_parent_id
DO $$
BEGIN
    IF NOT EXISTS (
        SELECT 1 FROM information_schema.columns 
        WHERE table_name = 'hr_department' 
        AND column_name = 'origin_id'
    ) THEN
        EXECUTE 'ALTER TABLE public.hr_department ADD COLUMN origin_id INTEGER';
    END IF;
    IF NOT EXISTS (
        SELECT 1 FROM information_schema.columns 
        WHERE table_name = 'hr_department' 
        AND column_name = 'origin_parent_id'
    ) THEN
        EXECUTE 'ALTER TABLE public.hr_department ADD COLUMN origin_parent_id INTEGER';
    END IF;
END $$;

-- odoo_erp中不存在ods中的记录归档acitve=false

UPDATE  public.hr_department  as ta
SET     active = false
WHERE   not EXISTS (select dd_id from ods.ods_php_erp_s_depart as tb  where  tb.dd_id = ta.origin_id );

-- 插入不存在于odoo_erp中的ods中的记录

INSERT INTO hr_department( origin_id , name , origin_parent_id ,active, company_id )
select  dd_id as origin_id , 
        cast(jsonb_build_object('zh_CN', dd_name, 'en_US', COALESCE(s_en_name,dd_name),'ja_JP',COALESCE(s_jp_name,dd_name))::TEXT AS JSONB)  AS name, 
        dd_parent_id as origin_parent_id , 
        true as active, 
        (select  id  from  res_company		WHERE   name like '泉州森地客' ) as company_id
from    ods.ods_php_erp_s_depart as ods_dep
WHERE   not EXISTS (
                      select  1  
                      from    public.hr_department as hr_dep
                      where   hr_dep.origin_id = ods_dep.dd_id
                    );

-- 校验odoo_erp中的active状态

UPDATE  public.hr_department as ta
SET     active = TRUE 
WHERE   active = false and exists ( select 1 from ods.ods_php_erp_s_depart as tb where  tb.dd_id = ta.origin_id );

-- 校验name 和 parent_id 是否一致
update  public.hr_department
set     name = t.name , origin_parent_id = t.origin_parent_id , write_date = CURRENT_TIMESTAMP
from    (
          select  ta.id , tb.name , tb.origin_parent_id
          from    public.hr_department as ta inner join 
                  (
                    select  dd_id , 
                            cast(jsonb_build_object('zh_CN', dd_name, 'en_US', COALESCE(s_en_name,dd_name),'ja_JP',COALESCE(s_jp_name,dd_name))::TEXT AS JSONB)  AS name, 
                            dd_parent_id as origin_parent_id
                    FROM    ods.ods_php_erp_s_depart
                   ) as tb on tb.dd_id = ta.origin_id 
          where   ta.name &lt;&gt; tb.name or ta.origin_parent_id &lt;&gt; tb.origin_parent_id
        ) t 
where   t.id = public.hr_department.id;

-- 更新部门的上下级关系

UPDATE  public.hr_department
SET   parent_id = hr_dep.parent_id
from  (

        SELECT b.id as parent_id, t.id 
        from  (
                select  *
                from    public.hr_department a 
                where   origin_parent_id is not NULL
              ) t inner join public.hr_department b on b.origin_id = t.origin_parent_id

      ) hr_dep 
WHERE   hr_dep.id = public.hr_department.id ;

-- 更新部门的complete_name  

WITH RECURSIVE dept_hierarchy AS (
    -- 基础查询：找出所有根节点
    SELECT 
        id,
        name,
        parent_id,
        --(name::json->>'zh_CN') AS zh_name,  -- 提取中文名
        (name::json->>'zh_CN') AS complete_name,
        id::TEXT || '/' AS parent_path
        --1 AS level
    FROM  public.hr_department
    WHERE parent_id IS NULL
    
    UNION ALL
    
    -- 递归查询：连接子部门
    SELECT 
        d.id,
        d.name,
        d.parent_id,
        --(d.name::json->>'zh_CN') AS zh_name,
        h.complete_name || ' / ' || (d.name::json->>'zh_CN') AS complete_name,
        h.parent_path || d.id::TEXT || '/' as parent_path
    FROM public.hr_department d
    JOIN dept_hierarchy h ON d.parent_id = h.id
)
UPDATE public.hr_department
SET complete_name = dept.complete_name , parent_path = dept.parent_path
FROM (
        SELECT 
            id,
            --zh_name AS name,  -- 显示中文名
            --parent_id,
            complete_name,
            parent_path
            --level
        FROM dept_hierarchy
        ORDER BY id -- level, 
    ) dept 
WHERE   dept.id = public.hr_department.id;

</sql>
